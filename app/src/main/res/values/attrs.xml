<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--取景框-->
    <declare-styleable name="ClipImageView">
        <attr format="integer" name="civHeight"/>
        <attr format="integer" name="civWidth"/>
        <attr format="string" name="civTipText"/>
        <attr format="dimension" name="civTipTextSize"/>
        <attr format="color" name="civMaskColor"/>
        <attr format="dimension" name="civClipPadding"/>
        <attr format="dimension|reference" name="civClipRoundCorner"/>
        <attr format="boolean" name="civClipCircle"/>
    </declare-styleable>

    <declare-styleable name="VerificationCodeInput">
        <attr format="integer" name="box"/>
        <attr format="dimension" name="child_h_padding"/>
        <attr format="dimension" name="child_v_padding"/>
        <attr format="dimension" name="child_width"/>
        <attr format="dimension" name="child_height"/>
        <attr format="dimension" name="padding"/>
        <attr format="reference" name="box_bg_focus"/>
        <attr format="reference" name="box_bg_normal"/>
        <attr format="string" name="inputType"/>
    </declare-styleable>

    <declare-styleable name="CardImageView">
        <attr format="boolean" name="hasShade"/>
        <attr format="reference" name="shade"/>
    </declare-styleable>

    <!--图片裁剪框-->
    <declare-styleable name="CropImageView">
        <attr format="color" name="cropMaskColor"/>
        <attr format="color" name="cropBorderColor"/>
        <attr format="dimension" name="cropBorderWidth"/>
        <attr format="dimension" name="cropFocusWidth"/>
        <attr format="dimension" name="cropFocusHeight"/>
        <attr format="enum" name="cropStyle">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CardListTabLayout">
        <attr format="dimension" name="minTextSize"/>
        <attr format="dimension" name="maxTextSize"/>
        <attr format="color" name="minTextColor"/>
        <attr format="color" name="maxTextColor"/>
    </declare-styleable>

    <declare-styleable name="CBRatingBar">
        <attr name="starSize" format="dimension|reference"/>
        <attr name="starCount" format="integer"/>
        <attr name="starSpace" format="dimension|reference"/>
        <attr name="starMaxProgress" format="float"/>
        <attr name="starProgress" format="float"/>
        <attr name="starStrokeWidth" format="dimension|reference"/>
        <attr name="starShowStroke" format="boolean"/>
        <attr name="starStrokeColor" format="color|reference"/>
        <attr name="starFillColor" format="color|reference"/>
        <attr name="starCoverColor" format="color|reference"/>
        <attr name="starCanTouch" format="boolean"/>
        <attr name="starUseGradient" format="boolean"/>
        <attr name="starStartColor" format="color|reference"/>
        <attr name="starEndColor" format="color|reference"/>
        <attr name="starPathData" format="string|reference"/>
        <attr name="starPathDataId" format="reference"/>
        <attr name="starCoverDir">
            <enum name="left_to_right" value="0" />
            <enum name="right_to_left" value="1" />
            <enum name="top_to_bottom" value="2" />
            <enum name="bottom_to_top" value="3" />
        </attr>
    </declare-styleable>
</resources>