<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateAlwaysHidden</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>
	
	<style name="AppTheme.Splash" parent="AppTheme">
		<item name="android:windowBackground">@drawable/splash</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_main_selector</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Widget.Design.AppBarLayout.NoElevation" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
    </style>
    
    
    <style name="tv_card">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">18</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">@dimen/text_size_text_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_single">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="progress_intelligence_value">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_intelligence_value</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    </style>

    <style name="tv_card_category">
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">@dimen/text_size_text_3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:transitionName">cardCategory</item>
    </style>

    <style name="tv_card_label">
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">@dimen/text_size_text_3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:transitionName">cardLabel</item>
    </style>

</resources>
