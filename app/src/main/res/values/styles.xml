<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Translucent.FullScreen" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@color/opacity_60</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_main_selector</item>
        <item name="android:onClick">onTabClick</item>
    </style>

    <style name="BottomDialog" parent="Theme.Design.BottomSheetDialog">

    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.Design.AppBarLayout.NoElevation" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
    </style>

    <style name="text_16sp_66">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_66</item>
    </style>

    <style name="tv_card">
        <item name="android:maxLines">2</item>
        <item name="android:maxEms">20</item>
    </style>

    <style name="tv_single">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>
