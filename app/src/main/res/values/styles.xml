        <item name="android:textColor">#c6174e</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="link_edit_text"  parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bg_link_edit_text</item>
