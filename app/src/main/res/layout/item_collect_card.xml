<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="0.5dp"
    android:background="@drawable/bg_item_home_card"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_collect_card_top"
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_collect_card_icon"
            tools:src="@drawable/iv_item_home_card_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="6dp"
            app:riv_corner_radius_top_right="6dp"/>

        <TextView
            android:id="@+id/tv_item_collect_card_num"
            android:paddingLeft="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            tools:text="%1$d人收藏  %2$d人认同"
            android:textColor="@color/white_final"
            android:textSize="11sp"
            android:background="@drawable/bg_tv_card_collect_num"
            android:layout_width="match_parent"
            android:layout_height="26dp"/>

        <RelativeLayout
            android:id="@+id/rl_item_collect_card"
            android:visibility="gone"
            android:background="@drawable/bg_item_collect_folder_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cb_item_collect_card"
                android:button="@drawable/selector_cb_item_collect_folder"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_collect_card_title"
        android:layout_below="@id/rl_item_collect_card_top"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="14dp"
        tools:text="笔记本"
        style="@style/tv_card"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/text_color_40"
        android:textSize="@dimen/sp_tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>