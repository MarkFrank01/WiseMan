<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_register_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:src="@drawable/common_close"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="phone"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:maxLength="11"
            android:textColor="@color/text_color_40"
            android:textColorHint="@color/line"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_register_phone_clear"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/iv_phone_clear"/>

        <View
            android:layout_below="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bottom_dialog_add_collecr_folder"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_register_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="验证码"
            android:background="@null"
            android:inputType="number"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_color_40"
            android:textColorHint="@color/line"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_register_send_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发送验证码"
            android:textSize="13sp"
            android:textColor="@color/color_tv_select_attention_next"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_register_send_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="验证码次数达上限"
            android:drawableRight="@drawable/tv_register_send_code"
            android:drawablePadding="5.5dp"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@color/text_color_99"
            android:padding="10dp"/>

        <View
            android:layout_below="@+id/et_register_verification_code"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bottom_dialog_add_collecr_folder"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="设置6-16位密码"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:maxLength="16"
            android:textColor="@color/text_color_40"
            android:textColorHint="@color/line"
            android:textSize="16sp"/>

        <View
            android:layout_below="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bottom_dialog_add_collecr_folder"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:text="注册"
        android:textSize="17sp"
        android:textColor="@color/color_btn_login"
        android:enabled="false"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="注册代表你已阅读并同意"
            android:textSize="14sp"
            android:textColor="@color/text_color_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_register_agreement"
            android:text="识堂协议"
            android:textSize="14sp"
            android:textColor="@color/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
