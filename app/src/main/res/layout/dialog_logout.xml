<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_logout_title"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:text="退出登录"
        android:textStyle="bold"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/text_size_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_dialog_logout"
        android:layout_below="@id/tv_dialog_logout_title"
        android:text="退出后将无法实时查看动态和榜单信息"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_text_2"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_below="@id/tv_dialog_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:text="@string/common_cancel"
            android:gravity="start|center_vertical"
            android:textColor="@color/text_color_1"
            android:textSize="17sp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="18dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:text="@string/common_confirm"
            android:gravity="center_vertical|end"
            android:paddingEnd="20dp"
            android:textColor="@color/text_color_1"
            android:textSize="17sp"
            android:paddingTop="20dp"
            android:paddingBottom="18dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
</RelativeLayout>