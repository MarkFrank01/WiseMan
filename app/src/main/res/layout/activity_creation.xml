<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:orientation="vertical">
		
		<include layout="@layout/toolbar"/>
		
		<android.support.design.widget.TabLayout
			android:id="@+id/tl_creation"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:layout_gravity="center_horizontal"
			app:tabBackground="@color/translate"
			app:tabIndicatorColor="@color/translate"
			app:tabMode="fixed"
			app:tabSelectedTextColor="@color/translate"/>
		
		<FrameLayout
			android:id="@+id/fl_creation"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		</FrameLayout>
	
	</LinearLayout>
	
	<ImageView
		android:id="@+id/iv_add_new"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="25dp"
		android:layout_marginEnd="25dp"
		android:layout_gravity="end|bottom"
		android:src="@drawable/iv_add_new"
		android:translationZ="11dp"/>

</FrameLayout>
