<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_iui_title"
        android:text="选择你感兴趣的卡包"
        android:textSize="@dimen/text_size_title_1"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_select_attention_hint"
        android:text="花一点点时间让我们更好的了解你 (2/2)"
        android:layout_below="@id/tv_iui_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_iui_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_attention"
        android:layout_below="@id/tv_select_attention_hint"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
