<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">
	
	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar"/>
	
	<TextView
		android:id="@+id/tv_iui_title"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginStart="20dp"
		android:layout_below="@id/toolbar"
		android:text="选择你感兴趣的卡包"
		android:textColor="@color/text_color_1"
		android:textSize="@dimen/text_size_title_1"/>
	
	<TextView
		android:id="@+id/tv_select_attention_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="18dp"
		android:layout_marginStart="20dp"
		android:layout_below="@id/tv_iui_title"
		android:text="花一点点时间让我们更好的了解你"
		android:textColor="@color/text_color_d2"
		android:textSize="@dimen/text_size_text_2"/>
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_select_attention"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/tv_select_attention_hint"
		android:paddingLeft="12.5dp"
		android:paddingRight="12.5dp"/>
</RelativeLayout>
