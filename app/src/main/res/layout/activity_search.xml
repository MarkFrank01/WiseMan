<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">
	
	<EditText
		android:id="@+id/et_search"
		android:layout_width="0dp"
		android:layout_height="32dp"
		android:layout_marginTop="6dp"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="2dp"
		android:paddingStart="6dp"
		android:paddingEnd="32dp"
		android:background="@drawable/bg_home_search"
		android:cursorVisible="true"
		android:drawablePadding="5dp"
		android:drawableStart="@drawable/search_inside"
		android:gravity="center_vertical"
		android:imeOptions="actionSearch"
		android:inputType="text"
		android:maxLines="1"
		android:singleLine="true"
		android:textColor="@color/text_color_1"
		android:textColorHint="@color/text_color_d2"
		android:textCursorDrawable="@drawable/bg_edit_cursor"
		android:textSize="17sp"
		app:layout_constraintEnd_toStartOf="@id/tv_search_cancel"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="4554555555555555555555555555555555555566"/>
	
	<TextView
		android:id="@+id/tv_search_cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:text="@string/common_cancel"
		android:textColor="@color/button_blue"
		android:textSize="@dimen/text_size_text_1"
		app:layout_constraintBottom_toBottomOf="@id/et_search"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/et_search"/>
	
	<ImageView
		android:id="@+id/iv_search_input_clear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="2dp"
		android:padding="10dp"
		android:src="@drawable/iv_search_clear"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/et_search"
		app:layout_constraintEnd_toEndOf="@id/et_search"
		app:layout_constraintTop_toTopOf="@id/et_search"/>
	
	<View
		android:id="@+id/view_line"
		style="@style/line"
		android:layout_marginTop="6dp"
		app:layout_constraintTop_toBottomOf="@id/et_search"/>
	
	<TextView
		android:id="@+id/tv_search_history"
		android:textStyle="bold"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginTop="30dp"
		android:layout_marginStart="12dp"
		android:text="历史搜索"
		android:textColor="@color/text_color_3"
		android:textSize="@dimen/text_size_text_2"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_line"
		app:layout_goneMarginStart="20dp"/>
	
	<ImageView
		android:id="@+id/iv_search_clear_history"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="5dp"
		android:padding="10dp"
		android:src="@drawable/common_delete"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/tv_search_history"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/tv_search_history"/>
	
	<com.zxcx.zhizhe.widget.TwoLineFlexboxLayout
		android:id="@+id/fl_search_history"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="12.5dp"
		android:visibility="gone"
		app:alignContent="flex_start"
		app:alignItems="center"
		app:dividerDrawableHorizontal="@color/white"
		app:dividerDrawableVertical="@color/white"
		app:flexDirection="row"
		app:flexWrap="wrap"
		app:layout_constraintTop_toBottomOf="@id/tv_search_history"
		app:showDividerHorizontal="middle"
		app:showDividerVertical="middle"/>
	
	<TextView
		android:id="@+id/tv_hot_search"
		android:textStyle="bold"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginTop="30dp"
		android:layout_marginStart="12dp"
		android:text="热门搜索"
		android:textColor="@color/text_color_3"
		android:textSize="@dimen/text_size_text_2"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/fl_search_history"
		app:layout_goneMarginStart="20dp"/>
	
	<com.zxcx.zhizhe.widget.TwoLineFlexboxLayout
		android:id="@+id/fl_hot_search"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="12.5dp"
		app:alignContent="flex_start"
		app:alignItems="center"
		app:dividerDrawableHorizontal="@color/white"
		app:dividerDrawableVertical="@color/white"
		app:flexDirection="row"
		app:flexWrap="wrap"
		app:layout_constraintTop_toBottomOf="@id/tv_hot_search"
		app:showDividerHorizontal="middle"
		app:showDividerVertical="middle"/>
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_search_pre"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="12dp"
		android:layout_marginStart="18dp"
		android:layout_marginEnd="20dp"
		android:background="@color/background"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_line"
		tools:listitem="@layout/item_search_pre"/>

</android.support.constraint.ConstraintLayout>