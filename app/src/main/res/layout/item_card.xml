<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/white"
    android:stateListAnimator="@animator/anim_home_card_press"
    android:orientation="vertical">

    <com.zxcx.zhizhe.widget.CardRoundedImageView
        android:id="@+id/iv_item_card_icon"
        tools:src="@drawable/iv_item_home_card_icon"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:transitionName="cardImage"
        app:riv_corner_radius="6dp"
        app:widthWeight="16"
        app:heightWeight="9"
        app:radius="6dp"
        app:hasShade="true"/>

    <TextView
        android:id="@+id/tv_item_card_type"
        android:gravity="center"
        android:text="卡片"
        android:textColor="@color/white_final"
        android:textSize="@dimen/text_size_text_3"
        android:background="@drawable/bg_tv_item_card_type"
        android:layout_gravity="end"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_card_title"
            tools:text="笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本"
            style="@style/tv_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="cardTitle"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_card_card_bag"
                tools:text="数码产品"
                android:gravity="center"
                android:background="@drawable/bg_card_details_card_bag"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="cardBag"/>

            <TextView
                android:id="@+id/tv_item_card_reade_num"
                android:drawableStart="@drawable/tv_item_rank_user_card"
                android:drawablePadding="5dp"
                android:layout_marginStart="15dp"
                tools:text="500"
                style="@style/tv_single"
                android:textSize="@dimen/text_size_text_3"
                android:textColor="@color/white_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_card_collect_num"
                android:drawableStart="@drawable/tv_item_rank_user_fans"
                android:drawablePadding="5dp"
                android:layout_marginStart="15dp"
                tools:text="500"
                style="@style/tv_single"
                android:textSize="@dimen/text_size_text_3"
                android:textColor="@color/white_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>