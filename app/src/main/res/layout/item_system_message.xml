<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_system_message_title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        tools:text="审核通过"
        android:textColor="@color/button_blue"
        android:textSize="@dimen/text_size_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_system_message_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        tools:text="2017/11/12 18:06"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_system_message_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="你创作的卡片《hifi数码常识》已审核通过，感谢你对智者内容的分享和支持。"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/text_size_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_system_message_reason_hint"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="未通过原因"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_system_message_reason"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="未通过原因 标题、内容不符合平台定位，内容不够详实、偏离主题。"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="16dp"
        style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/tv_item_system_message_value"
            tools:text="智力值 +100"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_3"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_system_message_action"
            android:drawableRight="@drawable/common_into"
            tools:text="查看卡片"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_3"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>