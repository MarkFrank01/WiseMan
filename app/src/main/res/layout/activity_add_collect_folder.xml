<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_add_collect_folder"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="27.5dp"
        android:layout_marginRight="27.5dp"
        android:layout_below="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_add_collect_folder"
            android:singleLine="true"
            android:maxLines="1"
            android:hint=" 收藏夹名称"
            android:textSize="18sp"
            android:textColor="@color/text_color_66"
            android:textColorHint="@color/line"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/bg_edit_cursor"
            android:background="@null"
            android:drawablePadding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@drawable/bottom_dialog_add_collecr_folder"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>

</RelativeLayout>