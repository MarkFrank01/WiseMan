<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_item_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_card_type"
        android:gravity="center"
        android:text="专题"
        android:textColor="@color/white_final"
        android:textSize="@dimen/text_size_text_3"
        android:background="@drawable/bg_tv_item_card_type"
        android:layout_gravity="end"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_subject_name"
        tools:text="健康饮食"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_title_2"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.zxcx.zhizhe.widget.WrapContentHeightViewPager
        android:id="@+id/vp_item_subject"
        android:layout_marginTop="77dp"
        android:clipChildren="false"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>