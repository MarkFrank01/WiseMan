<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:text="立即加入"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        android:paddingBottom="20dp"
        android:paddingRight="18dp"
        android:lines="1"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:visibility="gone"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desc_title1"
            android:textSize="15sp"
            android:textColor="@color/text_color_3"
            android:layout_marginStart="18dp"
            android:text="圈子"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_tv1"
            android:textColor="@color/text_color_1"
            android:layout_marginStart="12dp"
            tools:text="带你去旅行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desc_title2"
            android:textSize="15sp"
            android:textColor="@color/text_color_3"
            android:layout_marginStart="18dp"
            android:text="价格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_tv2"
            android:textColor="@color/text_color_1"
            android:layout_marginStart="12dp"
            tools:text="带你去旅行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desc_title3"
            android:textSize="15sp"
            android:textColor="@color/text_color_3"
            android:layout_marginStart="18dp"
            android:text="会员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_tv_3"
            android:textColor="@color/text_color_1"
            android:layout_marginStart="12dp"
            tools:text="带你去旅行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desc_title4"
            android:textSize="15sp"
            android:textColor="@color/text_color_3"
            android:layout_marginStart="18dp"
            android:text="余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_tv_4"
            android:textColor="@color/text_color_1"
            android:layout_marginStart="12dp"
            tools:text="带你去旅行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/bottom_bt"
        android:textColor="@color/white"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="立即加入"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_backbutton"
        android:layout_width="160dp"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content"/>
</LinearLayout>