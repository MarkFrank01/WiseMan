<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/con_click"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="18dp"
    android:background="@drawable/bg_background_12dp"
    android:elevation="4dp"
    android:orientation="vertical"
    android:stateListAnimator="@animator/anim_home_card_press">

    <com.zxcx.zhizhe.widget.CardRoundedImageView
        android:id="@+id/iv_item_circle_classify_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:transitionName="cardImage"
        app:hasShade="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="2dp"
        app:shade="@color/shade"
        tools:src="@drawable/iv_item_home_card_icon"/>

    <TextView
        android:id="@+id/tv_item_circle_classify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/text_color_1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:transitionName="cardTitle"
        app:layout_constraintStart_toEndOf="@id/iv_item_circle_classify_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="小崔说科技"/>

    <LinearLayout
        android:id="@+id/ll_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/iv_item_circle_classify_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_circle_classify_title">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/star_off"/>

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_off"/>

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_off"/>

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_off"/>

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_off"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_circle_classify_desc"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_3"
        android:textSize="12sp"
        android:transitionName="cardTitle"
        app:layout_constraintStart_toEndOf="@id/iv_item_circle_classify_icon"
        app:layout_constraintTop_toBottomOf="@+id/ll_star"
        tools:text="为你解读最新最全的科…"/>

    <TextView
        android:id="@+id/tv_item_circle_classify_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/text_color_d2"
        android:textSize="12sp"
        android:transitionName="cardTitle"
        app:layout_constraintStart_toEndOf="@id/iv_item_circle_classify_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_circle_classify_desc"
        tools:text="科技"/>

    <TextView
        android:id="@+id/tv_item_circle_classify_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/text_color_d2"
        android:textSize="12sp"
        android:transitionName="cardTitle"
        app:layout_constraintStart_toEndOf="@id/tv_item_circle_classify_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_circle_classify_desc"
        tools:text="加入1.3W"/>

    <TextView
        android:id="@+id/tv_item_circle_classify_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/text_color_d2"
        android:textSize="12sp"
        android:transitionName="cardTitle"
        app:layout_constraintStart_toEndOf="@id/tv_item_circle_classify_join"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_circle_classify_desc"
        tools:text="话题7.8K"/>


    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="审核中"/>

    <CheckBox
        android:id="@+id/cb_item_select_join_circle"
        style="@style/tv_single"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_checkbox_select_attention1"
        android:button="@null"
        android:checked="true"
        android:clickable="false"
        android:gravity="center"
        android:text="加入"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_circle_classify_title"/>
</android.support.constraint.ConstraintLayout>