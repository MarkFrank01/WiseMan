<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fl_card_details"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<android.support.constraint.ConstraintLayout
		android:id="@+id/cl_card_details"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background">
		
		<ImageView
			android:id="@+id/iv_card_details_bg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"/>
		
		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:layout_centerHorizontal="true"
			android:background="@drawable/bg_background_12dp"
			android:elevation="5dp"
			android:orientation="vertical"
			android:stateListAnimator="@animator/anim_home_card_press">
			
			<android.support.constraint.ConstraintLayout
				android:id="@+id/cl_draft_details_content"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginBottom="57dp"
				android:background="@color/background"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0">
				
				<com.makeramen.roundedimageview.RoundedImageView
					android:id="@+id/iv_draft_details"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:scaleType="centerCrop"
					android:transitionName="cardImage"
					app:layout_constraintDimensionRatio="4:3"
					app:riv_corner_radius_top_left="6dp"
					app:riv_corner_radius_top_right="6dp"
					tools:src="@drawable/iv_item_home_card_icon"/>
				
				<TextView
					android:id="@+id/tv_draft_details_title"
					style="@style/tv_card"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:transitionName="cardTitle"
					app:layout_constraintTop_toBottomOf="@id/iv_draft_details"
					tools:text="笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本"/>
				
				<TextView
					android:id="@+id/tv_draft_details_category"
					style="@style/tv_card_category"
					android:layout_marginTop="12dp"
					android:layout_marginBottom="12dp"
					android:layout_marginStart="20dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/tv_draft_details_title"
					tools:text="数码产品"/>
				
				<TextView
					android:id="@+id/tv_draft_details_label"
					style="@style/tv_card_label"
					android:paddingTop="12dp"
					android:paddingBottom="12dp"
					android:paddingStart="12dp"
					android:paddingEnd="12dp"
					app:layout_constraintStart_toEndOf="@+id/tv_draft_details_category"
					app:layout_constraintTop_toBottomOf="@+id/tv_draft_details_title"
					tools:text="#数码产品"/>
				
				<android.support.v7.widget.AppCompatTextView
					android:id="@+id/tv_draft_details_content"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:lineSpacingExtra="6dp"
					android:textColor="@color/text_color_2"
					android:textSize="15sp"
					app:autoSizeMaxTextSize="15sp"
					app:autoSizeMinTextSize="5sp"
					app:autoSizeStepGranularity="1px"
					app:autoSizeTextType="uniform"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_draft_details_label"/>
			</android.support.constraint.ConstraintLayout>
			
			<ImageView
				android:id="@+id/iv_draft_details_edit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginStart="10dp"
				android:padding="10dp"
				android:src="@drawable/iv_note_details_edit"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>
			
			<ImageView
				android:id="@+id/iv_draft_details_commit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginEnd="10dp"
				android:padding="10dp"
				android:src="@drawable/iv_note_details_commit"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
		</android.support.constraint.ConstraintLayout>
		
		<ImageView
			android:id="@+id/iv_common_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginEnd="15dp"
			android:padding="10dp"
			android:src="@drawable/iv_common_close"
			android:translationZ="11dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
	
	</android.support.constraint.ConstraintLayout>
</FrameLayout>