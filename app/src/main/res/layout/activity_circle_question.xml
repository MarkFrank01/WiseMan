<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <TextView
            android:id="@+id/tv_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="2dp"
            android:text="@string/common_cancel"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_1"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:paddingEnd="2dp"
            android:paddingStart="10dp"
            android:text="提问"
            android:textColor="@color/color_text_enable_blue"
            android:textSize="@dimen/text_size_text_1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/text_color_2"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:text="输入问题"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_check1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:text="0/18"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <EditText
                    android:id="@+id/question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="你希望和大家讨论什么问题？"
                    android:textColorHint="@color/text_color_d2"
                    android:inputType="text"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textColor="@color/text_color_1"
                    android:textSize="17sp"/>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <TextView
                android:textColor="@color/text_color_2"
                android:textStyle="bold"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:maxLength="8"
                android:maxLines="1"
                android:text="问题补充"
                android:textSize="15sp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <EditText
                    android:id="@+id/question_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="请你输入你对这个问题的补充描述"
                    android:textColorHint="@color/text_color_d2"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:textColor="@color/text_color_1"
                    android:textSize="17sp"/>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/text_color_2"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:text="添加图片"
                    android:textSize="15sp"/>

                <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                    android:id="@+id/snpl_moment_add_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                    app:bga_snpl_deleteDrawableOverlapQuarter="false"
                    app:bga_snpl_editable="true"
                    app:bga_snpl_itemCornerRadius="0dp"
                    app:bga_snpl_itemSpanCount="2"
                    app:bga_snpl_itemWhiteSpacing="14dp"
                    app:bga_snpl_itemWidth="0dp"
                    app:bga_snpl_maxItemCount="6"
                    app:bga_snpl_otherWhiteSpacing="100dp"
                    app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
                    app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                    app:bga_snpl_plusEnable="true"
                    app:bga_snpl_sortable="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>