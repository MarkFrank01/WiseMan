<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_feedback_content"
            android:hint="@string/et_feedback_content"
            android:gravity="start"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_40"
            android:textColorHint="@color/line"
            android:textCursorDrawable="@drawable/bg_edit_cursor"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <EditText
            android:id="@+id/et_feedback_phone"
            android:hint="@string/et_feedback_phone"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:inputType="phone|textEmailAddress"
            android:textSize="14sp"
            android:textColor="@color/text_color_40"
            android:textColorHint="@color/line"
            android:textCursorDrawable="@drawable/bg_edit_cursor"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>

        <Button
            android:id="@+id/btn_feedback_commit"
            android:enabled="false"
            android:text="@string/btn_commit_feedback"
            android:textSize="17sp"
            android:textColor="@color/color_btn_login"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback_success"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_feedback_success"
            android:src="@drawable/iv_feedback_success"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36.5dp"
            android:layout_width="92dp"
            android:layout_height="92dp"/>

        <TextView
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:text="反馈成功"
            android:textSize="20sp"
            android:textColor="@color/text_color_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="感谢你对识堂的关注与支持，我们会认真处理你的反馈，尽快修复和完善相关功能。"
            android:textSize="14sp"
            android:textColor="@color/text_color_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <Button
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_btn_login"
            android:text="@string/common_close"
            android:textSize="17sp"
            android:textColor="@color/text_color_ff"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

    </LinearLayout>
    
</LinearLayout>
