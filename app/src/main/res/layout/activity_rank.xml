<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        style="@style/Widget.Design.AppBarLayout.NoElevation"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="榜单"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_title_1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll"/>

        <com.youth.banner.Banner
            android:id="@+id/banner_rank"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            app:indicator_drawable_selected="@drawable/indicator_drawable_selected"
            app:indicator_drawable_unselected="@drawable/indicator_drawable_unselected"
            app:indicator_margin="5dp"
            app:layout_scrollFlags="scroll"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <TextView
                android:layout_marginTop="25dp"
                android:text="本周我的榜单"
                android:textColor="@color/text_color_2"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_rank"
                android:background="@color/bg_card_bag"
                android:layout_marginTop="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_rank_header"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    tools:src="@drawable/logo"
                    app:riv_oval="true"/>

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_rank_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_rank_user_name"
                        android:layout_marginBottom="6dp"
                        tools:text="打印纸的规格"
                        android:textStyle="bold"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_1"
                        android:textColor="@color/text_color_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_rank_no_login"
                        android:visibility="gone"
                        android:layout_below="@id/tv_rank_user_name"
                        android:text="登录智者，查看你的排名"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_rank_card"
                        android:layout_below="@id/tv_rank_user_name"
                        android:drawableStart="@drawable/tv_item_rank_user_card"
                        android:drawablePadding="5dp"
                        tools:text="1000"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_rank_fans"
                        android:layout_below="@id/tv_rank_user_name"
                        android:layout_toEndOf="@id/tv_rank_card"
                        android:drawableStart="@drawable/tv_item_rank_user_fans"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="20dp"
                        tools:text="1000"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_rank_intelligence"
                        android:layout_below="@id/tv_rank_user_name"
                        android:layout_toEndOf="@id/tv_rank_fans"
                        android:drawableStart="@drawable/tv_item_rank_user_intelligence"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="20dp"
                        tools:text="1000"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <FrameLayout
                        android:id="@+id/fl_rank_header_rank"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <ImageView
                            android:id="@+id/iv_rank_header_rank"
                            android:src="@drawable/rank_4"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_rank_header_rank"
                            tools:text="4"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/text_size_text_2"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_rank_no_rank"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="未上榜"
                        android:textColor="@color/text_color_3"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_rank_more_rank"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="本周智者榜单"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/text_size_text_1"
            android:textStyle="bold"
            android:drawablePadding="6dp"
            android:drawableEnd="@drawable/common_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_rank_user"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_gravity="end"
        android:src="@drawable/iv_common_close"
        android:layout_marginTop="2dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>
