<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_home_card"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_card_bag_card_icon"
        android:src="@drawable/iv_item_home_card_icon"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="6dp"
        app:riv_corner_radius_top_right="6dp"/>

    <TextView
        android:id="@+id/tv_item_card_bag_card_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        tools:text="笔记本"
        android:textColor="@color/text_color_40"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_card_bag_card_num"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="23.5dp"
        tools:text="%1$d人收藏  %2$d人认同"
        android:textColor="@color/text_color_99"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>