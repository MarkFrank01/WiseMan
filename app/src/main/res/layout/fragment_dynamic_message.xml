<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:id="@+id/ll_dynamic_message_follow"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:text="关注"
                android:textStyle="bold"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_follow"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_message_like"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:text="点赞"
                android:textStyle="bold"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_like"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_message_collect"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:text="收藏"
                android:textStyle="bold"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_collect"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>