<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/ll_dynamic_message_follow"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="关注"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_follow"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_message_like"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="点赞"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_like"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_message_collect"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="收藏"
                android:textColor="@color/button_blue"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dynamic_message_collect"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:text="@string/tv_dynamic_message_no_data"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>