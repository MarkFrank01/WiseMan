<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_iui_title"
        android:text="初次见面如何认识你？"
        android:textSize="@dimen/text_size_title_1"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="花一点点时间让我们更好的了解你 (1/2)"
        android:layout_below="@id/tv_iui_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_iui_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_iui_sex"
        android:layout_below="@id/tv_iui_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="你的性别"
        android:layout_marginTop="123dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/text_color_ee"
        android:textSize="@dimen/text_size_title_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_below="@+id/tv_iui_sex"
        android:background="@color/text_color_2"/>

    <TextView
        android:id="@+id/tv_iui_birthday"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_iui_sex"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="18dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_1"
        android:textColorHint="@color/text_color_ee"
        android:textSize="@dimen/text_size_title_2"
        android:hint="你的生日"/>

    <TextView
        android:id="@+id/tv_iui_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textColor="@color/color_text_enable_blue"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:enabled="false"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="62dp"/>

</RelativeLayout>
