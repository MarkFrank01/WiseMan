<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/fragment_my_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_alignParentEnd="true"
        android:src="@drawable/login_close"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="修改生日"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.zxcx.zhizhe.widget.DatePickerLayout
        android:layout_centerInParent="true"
        android:background="@color/background"
        android:id="@+id/dpl_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_change_birthday_save"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:text="保存"
        android:textColor="@color/button_blue"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>