<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classify_classify"
    android:orientation="horizontal"
    android:layout_marginTop="21dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_classify_classify"
        tools:src="@drawable/iv_item_classify_classify_icon_placeholder"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_classify_classify"
        tools:text="聪慧生活"
        android:textSize="13sp"
        android:textColor="@color/text_color_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>