<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_my_background"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_change_phone_phone"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color_1"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            tools:text="当前"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/fragment_interval"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_change_phone_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="  输入手机号"
                android:background="@null"
                android:inputType="phone"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:maxLength="11"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_3"
                android:textSize="16sp"/>

            <View
                android:layout_below="@+id/et_change_phone_phone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/bottom_dialog_add_collecr_folder"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_change_phone_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="  验证码"
                android:background="@null"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/text_color_1"
                android:textColorHint="@color/text_color_3"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_register_send_verification"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/get_verification"
                android:textSize="13sp"
                android:textColor="@color/color_text_enable_blue"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tv_register_send_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/sms_send_over"
                android:drawableRight="@drawable/tv_register_send_code"
                android:drawablePadding="5.5dp"
                android:visibility="gone"
                android:textSize="13sp"
                android:textColor="@color/text_color_99"
                android:padding="10dp"/>

            <View
                android:layout_below="@+id/et_change_phone_verification_code"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/bottom_dialog_add_collecr_folder"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
