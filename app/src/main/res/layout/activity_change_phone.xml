<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:scrollbars="none">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:id="@+id/tv_change_phone_title"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="60dp"
				android:layout_marginStart="20dp"
				android:text="修改手机号"
				android:textColor="@color/text_color_1"
				android:textSize="@dimen/text_size_title_1"/>
			
			<RelativeLayout
				android:id="@+id/rl_change_phone_phone"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="110dp"
				android:layout_marginBottom="150dp"
				android:layout_marginStart="75dp"
				android:layout_marginEnd="75dp"
				android:layout_below="@id/tv_change_phone_title"
				android:focusable="true"
				android:focusableInTouchMode="true">
				
				<EditText
					android:id="@+id/et_change_phone_phone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="18dp"
					android:paddingBottom="16dp"
					android:background="@null"
					android:cursorVisible="true"
					android:enabled="false"
					android:gravity="center"
					android:hint="请输入手机号"
					android:inputType="phone"
					android:maxLength="11"
					android:textColor="@color/text_color_2"
					android:textColorHint="@color/text_color_ee"
					android:textCursorDrawable="@drawable/bg_edit_cursor"
					android:textSize="@dimen/text_size_title_2"/>
				
				<ImageView
					android:id="@+id/iv_change_phone_phone_clear"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:layout_alignParentRight="true"
					android:padding="12dp"
					android:src="@drawable/iv_phone_clear"
					android:visibility="gone"/>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_below="@+id/et_change_phone_phone"
					android:background="@color/text_color_2"/>
				
				<TextView
					android:id="@+id/tv_change_phone_send_code"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="24dp"
					android:layout_below="@+id/et_change_phone_phone"
					android:layout_centerHorizontal="true"
					android:enabled="false"
					android:text="获取验证码"
					android:textColor="@color/color_text_enable_blue"
					android:textSize="@dimen/text_size_text_1"/>
			
			</RelativeLayout>
			
			<LinearLayout
				android:id="@+id/ll_change_phone_code"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="90dp"
				android:layout_marginBottom="150dp"
				android:layout_below="@id/tv_change_phone_title"
				android:layout_centerHorizontal="true"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:visibility="gone">
				
				<TextView
					android:id="@+id/tv_change_phone_phone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:maxLength="11"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/text_size_title_2"
					tools:text="19999999999"/>
				
				<com.zxcx.zhizhe.widget.VerificationCodeInput
					android:id="@+id/vci_change_phone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:layout_marginBottom="18dp"
					android:layout_gravity="center_horizontal"
					android:digits="1234567890"
					app:box="4"
					app:box_bg_focus="@drawable/verification_edit_bg"
					app:box_bg_normal="@drawable/verification_edit_bg"
					app:child_h_padding="12dp"/>
				
				<TextView
					android:id="@+id/tv_change_phone_resend_code"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:enabled="false"
					android:textColor="@color/color_text_enable_blue"
					android:textSize="@dimen/text_size_text_1"
					tools:text="48 s"/>
			
			</LinearLayout>
		
		</RelativeLayout>
	</ScrollView>
	
	<ImageView
		android:id="@+id/iv_change_phone_close"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_marginEnd="15dp"
		android:layout_gravity="end"
		android:padding="10dp"
		android:src="@drawable/login_close"/>
</FrameLayout>