<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.zxcx.shitang.ui.card.card.cardDetails.CardDetailsBehavior">

    <RelativeLayout
        android:id="@+id/ll_card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp">

        <ImageView
            android:id="@+id/iv_card_details_back"
            android:layout_marginLeft="6.5dp"
            android:src="@drawable/iv_card_details_back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_card_details_title"
            tools:text="变色龙"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_card_details_subhead"
            android:textColor="@color/text_color_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_card_details"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <CheckBox
            android:id="@+id/cb_card_details_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_cb_card_details_collect"
            android:layout_marginLeft="21dp"
            android:layout_alignParentBottom="true"
            tools:text="200"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:paddingLeft="7.5dp"/>

        <CheckBox
            android:id="@+id/cb_card_details_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_cb_card_details_like"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/cb_card_details_collect"
            android:layout_marginLeft="28dp"
            tools:text="200"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:paddingLeft="7.5dp"/>

        <ImageView
            android:id="@+id/tv_card_details_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25.5dp"
            android:src="@drawable/selector_tv_card_details_share"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_card_details"
        android:layout_below="@id/ll_card_details"
        android:layout_above="@id/rl_card_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>