<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dialog_share"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_dialog_share_wechat"
            android:scaleType="centerCrop"
            android:src="@drawable/wechat"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_width="52dp"
            android:layout_height="57dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_dialog_share_moments"
            android:scaleType="centerCrop"
            android:src="@drawable/moments"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="47dp"
            android:layout_height="57dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_dialog_share_qq"
            android:scaleType="centerCrop"
            android:src="@drawable/qq"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="47dp"
            android:layout_height="57dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_dialog_share_weibo"
            android:scaleType="centerCrop"
            android:src="@drawable/weibo"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:layout_width="47dp"
            android:layout_height="57dp"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.zxcx.zhizhe.widget.RoundedFrameLayout
        android:layout_above="@id/ll_dialog_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/sv_dialog_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/bg_dialog"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.zxcx.zhizhe.widget.CardImageView
                        android:id="@+id/iv_dialog_share"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_card"
                        android:layout_width="match_parent"
                        android:layout_height="212dp"
                        android:transitionName="cardImage"
                        app:widthWeight="16"
                        app:heightWeight="9"
                        app:hasShade="true"/>

                    <RelativeLayout
                        android:layout_gravity="bottom"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_dialog_share_title"
                            tools:text="动圈和铁圈耳机的区别"
                            style="@style/tv_card"
                            android:textColor="@color/white_final"
                            android:textSize="@dimen/text_size_title_2"
                            android:textStyle="bold"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:transitionName="cardTitle"/>

                        <FrameLayout
                            android:id="@+id/fl_dialog_share_card_bag"
                            android:layout_below="@id/tv_dialog_share_title"
                            android:paddingTop="8dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_dialog_share_card_bag"
                                tools:text="数码产品"
                                style="@style/tv_card_bag"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_dialog_share_info"
                            android:layout_toEndOf="@id/fl_dialog_share_card_bag"
                            tools:text="@string/tv_card_info"
                            android:textColor="@color/text_color_ee"
                            android:textSize="@dimen/text_size_text_3"
                            android:layout_marginTop="12dp"
                            android:layout_below="@id/tv_dialog_share_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:transitionName="cardInfo"/>

                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_dialog_share"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_dialog_share_qr"
                    android:visibility="gone"
                    android:src="@drawable/iv_dialog_share_qr"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"/>
            </LinearLayout>
        </ScrollView>
    </com.zxcx.zhizhe.widget.RoundedFrameLayout>

    <ImageView
        android:id="@+id/iv_dialog_share_back"
        android:layout_alignParentEnd="true"
        android:src="@drawable/iv_common_close"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
