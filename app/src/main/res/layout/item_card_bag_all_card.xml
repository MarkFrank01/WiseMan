<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <TextView
        android:id="@+id/tv_card_bag_all_card_num"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        tools:text="001"
        android:textSize="14sp"
        android:textColor="@color/text_color_99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_card_bag_all_card_name"
        android:layout_toRightOf="@id/tv_card_bag_all_card_num"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        tools:text="联想垃圾"
        android:textSize="16sp"
        android:textColor="@color/text_color_66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_single"/>
    
    <View
        android:id="@+id/view_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="12dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>