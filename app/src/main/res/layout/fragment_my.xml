<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zxcx.zhizhe.ui.my.MyFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">

        <RelativeLayout
            android:id="@+id/rl_my_head"
            android:layout_marginTop="34dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_my_nick_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="8"
                tools:text="注册/登录"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title_1"
                android:textColor="@color/button_blue"/>

            <LinearLayout
                android:id="@+id/ll_my_intelligence_value"
                android:layout_below="@+id/tv_my_nick_name"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_lv"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    tools:text="LV.3"
                    android:gravity="center"
                    android:textColor="@color/button_blue"
                    android:textSize="@dimen/text_size_text_3"
                    android:background="@drawable/bg_lv"
                    android:layout_width="40dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:id="@+id/tv_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="登录看谁在关注你"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_3"/>

            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_my_head"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_my_head_placeholder"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:riv_oval="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_my_top_read"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_top_read_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="阅读"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_top_note"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_top_note_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="笔记"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_top_creation"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_top_creation_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="创作"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/strip"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <LinearLayout
            android:id="@+id/ll_my_message"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="5dp"
                    android:text="消息"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_message_red_point"
                    android:src="@drawable/red_point"
                    android:layout_gravity="top|end"
                    android:layout_width="8dp"
                    android:layout_height="8dp"/>
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_follow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_marginStart="20dp"
                android:text="关注"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_fans"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_marginStart="20dp"
                android:text="粉丝"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_collect"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/tv_my_collect"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_like"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:text="点赞"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_setting"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:text="设置"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            android:background="@color/strip"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <LinearLayout
            android:id="@+id/ll_my_night_model"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="@string/tv_common_setting_night_model"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <CheckBox
                android:id="@+id/cb_my_night_model"
                android:layout_width="42dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:button="@drawable/selector_check_box"/>

        </LinearLayout>

        <View
            android:background="@color/strip"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

    </LinearLayout>
</ScrollView>