<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_details">
	
	<LinearLayout
		android:id="@+id/ll_draft_details_bottom"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true">
		
		<ImageView
			android:id="@+id/iv_note_details_edit"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="26dp"
			android:padding="10dp"
			android:gravity="center"
			android:scaleType="center"
			android:src="@drawable/iv_note_details_edit"/>
		
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"/>
		
		<ImageView
			android:id="@+id/iv_note_details_commit"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginEnd="26dp"
			android:padding="10dp"
			android:scaleType="center"
			android:src="@drawable/iv_note_details_commit"/>
	
	</LinearLayout>
	
	<ScrollView
		android:id="@+id/sv_draft_details"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/ll_draft_details_bottom">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<com.zxcx.zhizhe.widget.CardImageView
					android:id="@+id/iv_draft_details"
					android:layout_width="match_parent"
					android:layout_height="212dp"
					android:scaleType="centerCrop"
					android:src="@drawable/default_card"
					android:transitionName="cardImage"
					app:hasShade="true"
					app:heightWeight="9"
					app:widthWeight="16"/>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:paddingStart="20dp"
					android:paddingEnd="20dp">
					
					<TextView
						android:id="@+id/tv_draft_details_title"
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:ellipsize="end"
						android:lineSpacingExtra="4dp"
						android:maxLines="2"
						android:textColor="@color/white_final"
						android:textSize="@dimen/text_size_title_2"
						android:transitionName="cardTitle"
						tools:text="动圈和铁圈耳机的区别"/>
					
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:layout_below="@id/tv_draft_details_title"
						android:gravity="center">
						
						<FrameLayout
							android:id="@+id/fl_draft_details_card_bag"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:paddingStart="0dp"
							android:paddingEnd="10dp">
							
							<TextView
								android:id="@+id/tv_draft_details_card_bag"
								style="@style/tv_card_category"
								tools:text="数码产品"/>
						</FrameLayout>
						
						<TextView
							android:id="@+id/tv_draft_details_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/text_color_ee"
							android:textSize="@dimen/text_size_text_3"
							android:transitionName="cardInfo"
							tools:text="@string/tv_card_info"/>
					</LinearLayout>
				
				</RelativeLayout>
			</FrameLayout>
			
			<FrameLayout
				android:id="@+id/fl_draft_details"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">
			</FrameLayout>
		</LinearLayout>
	</ScrollView>
	
	<ImageView
		android:id="@+id/iv_common_close"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:layout_alignParentEnd="true"
		android:padding="10dp"
		android:src="@drawable/iv_common_close"/>
</RelativeLayout>