<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fragment_my_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_title_1"
                android:textStyle="bold"
                android:text="账户资料"/>

            <LinearLayout
                android:id="@+id/ll_user_info_head"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_info_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/tv_user_info_head"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_user_info_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    tools:src="@drawable/default_header"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_nick_name"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/tv_user_info_nick_name"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <TextView
                    android:id="@+id/tv_user_info_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_text_2"
                    tools:text="一叶知秋"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_sex"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/tv_user_info_sex"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <TextView
                    android:id="@+id/tv_user_info_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_text_2"
                    tools:text="男"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_birthday"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/tv_user_info_birthday"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <TextView
                    android:id="@+id/tv_user_info_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_text_2"
                    tools:text="1999-12-10"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_signature"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="签名"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <TextView
                    android:id="@+id/tv_user_info_signature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_text_2"
                    tools:text="曾经我有一句空白签名，现在asdasda"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_attention"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="兴趣"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <View
                android:background="@color/strip"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

            <LinearLayout
                android:id="@+id/ll_user_info_safety"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="绑定"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_logout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="退出"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"/>

                <include layout="@layout/iv_right_into"/>

            </LinearLayout>

            <View
                android:background="@color/strip"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_gravity="end"
        android:src="@drawable/login_close"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>