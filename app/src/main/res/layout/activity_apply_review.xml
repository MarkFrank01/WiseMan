<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context="com.zxcx.zhizhe.ui.my.creation.ApplyReviewActivity">
	
	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar"/>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/tv_no_data_1"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:lineSpacingExtra="8dp"
			android:text="拼命审核中"
			android:textColor="@color/text_color_1"
			android:textSize="@dimen/text_size_title_2"/>
		
		<TextView
			android:id="@+id/tv_no_data_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:text="结果会以系统消息通知你"
			android:textColor="@color/text_color_2"
			android:textSize="@dimen/text_size_text_1"/>
	
	</LinearLayout>

</RelativeLayout>
