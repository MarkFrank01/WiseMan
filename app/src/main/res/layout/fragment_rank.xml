<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:background="@color/background"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="30dp"
                    android:text="本周我的榜单"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/rl_rank_my"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_rank_my_header"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="10dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        tools:src="@drawable/logo"
                        app:riv_oval="true"/>

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_rank_my_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_rank_my_user_name"
                            android:layout_marginBottom="10dp"
                            tools:text="打印纸的规格"
                            style="@style/tv_single"
                            android:textSize="@dimen/text_size_text_1"
                            android:textColor="@color/text_color_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_rank_my_no_login"
                            android:visibility="gone"
                            android:layout_below="@id/tv_rank_my_user_name"
                            android:text="登录查看你的榜单实时排名"
                            style="@style/tv_single"
                            android:textSize="@dimen/text_size_text_3"
                            android:textColor="@color/text_color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_rank_my_card"
                            android:layout_below="@id/tv_rank_my_user_name"
                            android:drawableLeft="@drawable/tv_item_rank_user_card"
                            android:drawablePadding="5dp"
                            tools:text="1000"
                            style="@style/tv_single"
                            android:textSize="@dimen/text_size_text_3"
                            android:textColor="@color/text_color_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_rank_my_fans"
                            android:layout_below="@id/tv_rank_my_user_name"
                            android:layout_toRightOf="@id/tv_rank_my_card"
                            android:drawableLeft="@drawable/tv_item_rank_user_fans"
                            android:drawablePadding="5dp"
                            android:layout_marginLeft="20dp"
                            tools:text="1000"
                            style="@style/tv_single"
                            android:textSize="@dimen/text_size_text_3"
                            android:textColor="@color/text_color_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_rank_my_read"
                            android:layout_below="@id/tv_rank_my_user_name"
                            android:layout_toRightOf="@id/tv_rank_my_fans"
                            android:drawableLeft="@drawable/tv_item_rank_user_read"
                            android:drawablePadding="5dp"
                            android:layout_marginLeft="20dp"
                            tools:text="1000"
                            style="@style/tv_single"
                            android:textSize="@dimen/text_size_text_3"
                            android:textColor="@color/text_color_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:id="@+id/fl_rank_my_header_rank"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <ImageView
                                android:id="@+id/iv_rank_my_header_rank"
                                android:src="@drawable/rank_4"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_rank_my_header_rank"
                                tools:text="4"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/text_size_text_2"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_rank_my_no_rank"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="暂未上榜"
                            android:textColor="@color/background"
                            android:textSize="@dimen/text_size_text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="25dp"
                        android:text="本周智者榜单"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/text_size_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_rank_more"
                        android:text="查看更多"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/text_color_2"
                        android:textSize="@dimen/text_size_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_rank"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</in.srain.cube.views.ptr.PtrFrameLayout>
