<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_show_window"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/invite_center_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="填写圈子邀请码"
            android:textColor="@color/text_color_1"
            android:textSize="17sp"/>

        <com.zxcx.zhizhe.widget.VerificationCodeInput
            android:id="@+id/vci_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="20dp"
            app:box="5"
            app:box_bg_focus="@drawable/verification_edit_bg"
            app:box_bg_normal="@drawable/verification_edit_bg"
            app:child_h_padding="6dp"
            app:inputType="text"/>

        <RelativeLayout
            android:id="@+id/input_commit"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:background="@drawable/invite_unclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_text"
               android:layout_centerInParent="true"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="马上体验"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/hint_error_type"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color_d2"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="智者圈子将陆续开放体验，尽请期待"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_cancel_popup"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

</LinearLayout>