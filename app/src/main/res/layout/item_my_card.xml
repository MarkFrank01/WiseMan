<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/es"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/bg_item_my_card"
    android:stateListAnimator="@animator/anim_home_card_press"
    android:orientation="vertical"
    app:contentView="@id/content_view"
    app:rightMenuView="@id/right_view">

    <FrameLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zxcx.zhizhe.widget.CardRoundedImageView
            android:id="@+id/iv_item_card_icon"
            tools:src="@drawable/iv_item_home_card_icon"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:transitionName="cardImage"
            app:riv_corner_radius="6dp"
            app:widthWeight="16"
            app:heightWeight="9"
            app:radius="6dp"
            app:hasShade="true"/>

        <TextView
            android:id="@+id/tv_item_card_type"
            android:text="卡片"
            style="@style/tv_card_type"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_card_title"
                tools:text="笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本"
                style="@style/tv_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="cardTitle"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_card_category"
                    tools:text="数码产品"
                    style="@style/tv_card_category"/>

                <TextView
                    android:id="@+id/tv_item_card_reade_num"
                    android:drawableStart="@drawable/tv_item_rank_user_card"
                    android:drawablePadding="3dp"
                    android:layout_marginStart="15dp"
                    tools:text="500"
                    style="@style/tv_single"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/white_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_item_card_collect_num"
                    android:drawableStart="@drawable/tv_item_rank_user_fans"
                    android:drawablePadding="3dp"
                    android:layout_marginStart="15dp"
                    tools:text="500"
                    style="@style/tv_single"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/white_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/right_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/white_final"
            android:textSize="@dimen/text_size_text_1"
            android:textStyle="bold"
            android:background="@color/text_color_d2"
            android:gravity="center"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_delete"
            android:text="删除"
            android:textColor="@color/white_final"
            android:textSize="@dimen/text_size_text_1"
            android:textStyle="bold"
            android:background="@drawable/bg_tv_delete"
            android:gravity="center"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>