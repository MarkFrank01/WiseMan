<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            app:hintEnabled="false">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_pates_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="http://www.example.com"
                android:inputType="text"
                android:lineSpacingExtra="10dp"
                android:maxLines="1"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/text_color_hint"
                android:textSize="17sp"
                android:theme="@style/link_edit_text"/>
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/ll_paste_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/iv_home_create_cancel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="28dp"
        android:background="@color/text_color_d2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>


</LinearLayout>