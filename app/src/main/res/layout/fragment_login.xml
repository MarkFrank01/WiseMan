<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="true"
            android:hint=" 手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_3"
            android:textCursorDrawable="@drawable/bg_edit_cursor"
            android:textSize="@dimen/text_size_text_1"/>

        <ImageView
            android:id="@+id/iv_login_phone_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/iv_phone_clear"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_login_phone"
            android:background="@drawable/bottom_dialog_add_collecr_folder"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_login_phone"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_marginTopPercent="3.8%">

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="true"
            android:enabled="false"
            android:hint=" 登录密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_3"
            android:textCursorDrawable="@drawable/bg_edit_cursor"
            android:textSize="@dimen/text_size_text_1"/>

        <ImageView
            android:id="@+id/iv_login_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/iv_phone_clear"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_login_password"
            android:background="@drawable/bottom_dialog_add_collecr_folder"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_login_password"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_btn_login"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/color_btn_login"
        android:textSize="@dimen/text_size_text_1"
        style="?android:attr/borderlessButtonStyle"
        app:layout_marginTopPercent="10%"/>

    <TextView
        android:id="@+id/tv_login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/forget_password"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_text_3"
        app:layout_marginTopPercent="2.5%"/>

    <LinearLayout
        android:id="@+id/ll_login_sdk_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="10%">

        <LinearLayout
            android:id="@+id/ll_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_login_qq"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/qq"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_login_wechat"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/wechat"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_login_weibo"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/weibo"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_3"/>
        </LinearLayout>
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
