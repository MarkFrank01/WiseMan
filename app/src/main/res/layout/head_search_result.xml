<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_head_search_result_card_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_search_card_bag"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="16dp"
                android:text="相关卡包"
                android:textColor="@color/text_color_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_result_card_bag"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_head_search_result"
                android:layout_marginTop="16dp"
                android:background="@color/fault"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_head_search_card"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:text="相关卡片"
        android:textColor="@color/text_color_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"/>

</LinearLayout>