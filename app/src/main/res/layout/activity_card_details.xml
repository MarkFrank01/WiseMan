<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_card_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_card_details_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zxcx.zhizhe.widget.CardImageView
                    android:id="@+id/iv_card_details"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_card"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:transitionName="cardImage"
                    app:widthWeight="16"
                    app:heightWeight="9"
                    app:hasShade="true"/>

                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_card_details_title"
                        tools:text="动圈和铁圈耳机的区别"
                        style="@style/tv_card"
                        android:textColor="@color/white_final"
                        android:textSize="@dimen/text_size_title_2"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="cardTitle"/>

                    <FrameLayout
                        android:id="@+id/fl_card_details_card_bag"
                        android:layout_below="@id/tv_card_details_title"
                        android:paddingTop="12dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_card_details_card_bag"
                            tools:text="数码产品"
                            style="@style/tv_card_bag"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_card_details_info"
                        android:layout_toEndOf="@id/fl_card_details_card_bag"
                        tools:text="@string/tv_card_info"
                        android:textColor="@color/text_color_ee"
                        android:textSize="@dimen/text_size_text_3"
                        android:layout_marginTop="12dp"
                        android:layout_below="@id/tv_card_details_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="cardInfo"/>

                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_card_details"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_card_details_ad"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zxcx.zhizhe.widget.CardImageView
                    android:id="@+id/iv_card_details_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:widthWeight="16"
                    app:heightWeight="9"
                    app:hasShade="false"/>
                
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/rl_card_details_bottom"
                android:visibility="visible"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_item_rank_user"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:src="@drawable/logo"
                    app:riv_oval="true"/>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_item_rank_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_rank_user_name"
                        android:layout_marginBottom="8dp"
                        tools:text="打印纸的规格"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_1"
                        android:textColor="@color/text_color_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_item_rank_user_card"
                        android:layout_below="@id/tv_item_rank_user_name"
                        android:drawableStart="@drawable/tv_item_rank_user_card"
                        android:drawablePadding="5dp"
                        tools:text="500"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_item_rank_user_fans"
                        android:layout_below="@id/tv_item_rank_user_name"
                        android:layout_toEndOf="@id/tv_item_rank_user_card"
                        android:drawableStart="@drawable/tv_item_rank_user_fans"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="15dp"
                        tools:text="500"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_item_rank_user_read"
                        android:layout_below="@id/tv_item_rank_user_name"
                        android:layout_toEndOf="@id/tv_item_rank_user_fans"
                        android:drawableStart="@drawable/tv_item_rank_user_intelligence"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="15dp"
                        tools:text="500"
                        style="@style/tv_single"
                        android:textSize="@dimen/text_size_text_3"
                        android:textColor="@color/text_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:id="@+id/cb_card_details_follow"
                        android:text="关注"
                        android:textSize="14sp"
                        android:checked="false"
                        android:textColor="@color/color_checkbox_text_follow"
                        android:button="@null"
                        android:background="@drawable/selector_checkbox_bg_follow"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_width="82dp"
                        android:layout_height="32dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:visibility="gone"
                style="@style/line"/>

            <LinearLayout
                android:id="@+id/ll_card_details_bottom"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/ll_card_details_collect"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_card_details_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/selector_cb_card_details_collect"
                        tools:text="200"
                        android:textSize="12sp"
                        android:textColor="@color/color_checkbox_card_details"
                        android:paddingStart="7.5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_card_details_like"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/cb_card_details_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/selector_cb_card_details_like"
                        tools:text="200"
                        android:textSize="12sp"
                        android:textColor="@color/color_checkbox_card_details"
                        android:paddingStart="7.5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_card_details_un_like"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_card_details_un_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/selector_cb_card_details_un_like"
                        tools:text="200"
                        android:textSize="12sp"
                        android:textColor="@color/color_checkbox_card_details"
                        android:paddingStart="7.5dp"/>
                </LinearLayout>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_card_details_share"
                    android:paddingEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/selector_tv_card_details_share"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_card_details_back"
        android:layout_gravity="end"
        android:src="@drawable/iv_common_close"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>