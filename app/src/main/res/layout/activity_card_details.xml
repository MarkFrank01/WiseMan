<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/tv_card_details_name"
        android:text="笔记本"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:background="@drawable/bg_card_details_3"
        android:layout_below="@+id/tv_card_details_name"
        app:layout_marginTopPercent="25.4%"
        app:layout_widthPercent="80.3%"
        app:layout_heightPercent="54.7%"
        android:layout_centerHorizontal="true"
        app:riv_corner_radius="4dp"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:background="@drawable/bg_card_details_2"
        android:layout_below="@+id/tv_card_details_name"
        app:layout_marginTopPercent="12.7%"
        app:layout_widthPercent="86.1%"
        app:layout_heightPercent="66.4%"
        android:layout_centerHorizontal="true"
        app:riv_corner_radius="4dp"/>


    <android.support.percent.PercentRelativeLayout
        android:background="@drawable/bg_card_details_1"
        android:layout_below="@+id/tv_card_details_name"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="14.2%"
        app:layout_widthPercent="92%"
        app:layout_heightPercent="63.4%">

        <TextView
            android:id="@+id/tv_card_details_subhead"
            app:layout_marginTopPercent="35%"
            android:layout_marginLeft="22.5dp"
            android:text="据说白色的花才会活"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_card_details_content"
            android:layout_below="@+id/tv_card_details_subhead"
            android:layout_marginTop="11.5dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="13dp"
            android:text="不宜与酒同时饮用小儿不宜饮用喝咖啡，不宜吸烟不宜长期用咖啡不宜短时间内大量饮用孕妇不宜过量饮用咖，啡饮用前不应长时间的煎煮的胺氧化酶用，饮咖啡忌吃多酶片及维生素素，不宜与酒同时饮用小儿不宜用，喝咖啡不宜吸烟，不宜长期用不宜短时间内大量饮用孕妇不宜过量饮用咖啡，饮用前不应长时间的煎煮服单。"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="4.5dp"
            android:textColor="@color/text_color_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cb_card_details_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_cb_card_details_collect"
            android:layout_marginLeft="21dp"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:text="200"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:paddingLeft="7.5dp"/>

        <CheckBox
            android:id="@+id/cb_card_details_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_cb_card_details_like"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="200"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:paddingLeft="7.5dp"/>

        <TextView
            android:id="@+id/tv_card_details_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="200"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:textStyle="bold"
            android:layout_marginRight="25.5dp"
            android:drawableLeft="@drawable/selector_tv_card_details_share"
            android:drawablePadding="7dp"/>

    </android.support.percent.PercentRelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_card_details"
        android:src="@drawable/iv_item_home_card_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_card_details_name"
        android:layout_marginTop="19.5dp"
        android:layout_width="315dp"
        android:layout_height="200dp"
        app:layout_widthPercent="84%"
        app:layout_heightPercent="30%"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"/>

</android.support.percent.PercentRelativeLayout>
