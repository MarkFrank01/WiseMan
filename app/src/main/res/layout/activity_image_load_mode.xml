<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:orientation="vertical">
	
	<include layout="@layout/toolbar"/>
	
	<LinearLayout
		android:id="@+id/ll_image_load_mode_wifi"
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:background="@color/background"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/tv_image_load_mode_wifi"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="仅在Wi-Fi下加载高清图"
			android:textColor="@color/text_color_1"
			android:textSize="@dimen/text_size_text_1"/>
		
		<CheckBox
			android:id="@+id/cb_image_load_mode_wifi"
			android:layout_width="42dp"
			android:layout_height="22dp"
			android:layout_marginRight="15dp"
			android:layout_gravity="center_vertical"
			android:button="@drawable/selector_check_box"/>
	
	</LinearLayout>
	
	<View
		style="@style/line"
		android:layout_marginLeft="20dp"/>
	
	<LinearLayout
		android:id="@+id/ll_image_load_mode_all"
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:background="@color/background"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/tv_image_load_mode_all"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="所有网络均加载高清图"
			android:textColor="@color/text_color_1"
			android:textSize="@dimen/text_size_text_1"/>
		
		<CheckBox
			android:id="@+id/cb_image_load_mode_all"
			android:layout_width="42dp"
			android:layout_height="22dp"
			android:layout_marginRight="15dp"
			android:layout_gravity="center_vertical"
			android:button="@drawable/selector_check_box"/>
	
	</LinearLayout>

</LinearLayout>