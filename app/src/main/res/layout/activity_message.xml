<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:orientation="vertical"
	tools:context="com.zxcx.zhizhe.ui.my.message.MessageActivity">
	
	<include layout="@layout/toolbar"/>
	
	<android.support.design.widget.TabLayout
		android:id="@+id/tl_message"
		android:layout_width="248dp"
		android:layout_height="44dp"
		android:layout_gravity="center_horizontal"
		app:tabBackground="@color/translate"
		app:tabIndicatorColor="@color/translate"
		app:tabMode="fixed"
		app:tabSelectedTextColor="@color/translate"/>
	
	<FrameLayout
		android:id="@+id/fl_message"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
	
	</FrameLayout>

</LinearLayout>
