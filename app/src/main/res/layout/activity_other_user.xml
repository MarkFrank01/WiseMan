<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_other_user_head"
            android:layout_marginTop="34dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <TextView
                android:id="@+id/tv_other_user_nick_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="8"
                tools:text="怕是个傻子哦"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title_1"
                android:textColor="@color/text_color_1"/>

            <LinearLayout
                android:id="@+id/ll_other_user_intelligence_value"
                android:layout_below="@+id/tv_other_user_nick_name"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_user_lv"
                    android:layout_marginEnd="8dp"
                    tools:text="LV.3"
                    android:gravity="center"
                    android:textColor="@color/button_blue"
                    android:textSize="@dimen/text_size_text_3"
                    android:background="@drawable/bg_lv"
                    android:layout_width="40dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:id="@+id/tv_other_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="当前智力值 100"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/button_blue"/>

            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_other_user_head"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_my_head_placeholder"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:riv_oval="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            app:layout_scrollFlags="scroll">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_user_read_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="阅读"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_user_note_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="笔记"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_user_creation_num"
                    android:text="0"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_size_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="创作"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/strip"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <LinearLayout
            android:id="@+id/ll_other_user_all_creation"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginStart="20dp"
                android:text="全部创作"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            android:background="@color/strip"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_other_user"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <ImageView
        android:id="@+id/iv_rank_close"
        android:layout_gravity="end"
        android:src="@drawable/iv_card_details_back"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

</android.support.design.widget.CoordinatorLayout>