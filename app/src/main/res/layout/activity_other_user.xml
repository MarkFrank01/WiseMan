<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_my_background"
    tools:context="com.zxcx.zhizhe.ui.my.MyFragment">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/rl_my_head"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_other_user_head"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/iv_my_head_placeholder"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:riv_oval="true"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_other_user_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_other_user_signture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tv_single"
                tools:text="曾经有一句空白签名，现在木有了"
                android:textSize="@dimen/text_size_text_1"
                android:textColor="@color/text_color_1"/>

            <TextView
                android:id="@+id/tv_other_user_info"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="智力值 1234k"
                android:textSize="@dimen/text_size_text_3"
                android:textColor="@color/text_color_3"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_other_user_creation"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/tv_my_common_setting"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:text="他的创作"
            style="@style/text_16sp_66"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <include layout="@layout/iv_right_into"/>

    </LinearLayout>

</LinearLayout>
