<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_alignParentEnd="true"
        android:src="@drawable/login_close"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="绑定设置"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="84dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_user_safety_phone_bind"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:text="手机号"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_user_safety_phone_bind_status"
                android:text="@string/is_binding"
                android:gravity="right"
                android:textSize="@dimen/text_size_text_2"
                android:layout_marginRight="5dp"
                android:textColor="@color/button_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_safety_qq_bind"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:text="@string/tv_user_safety_qq"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_user_safety_qq_bind_status"
                android:text="@string/is_binding"
                android:gravity="right"
                android:textSize="@dimen/text_size_text_2"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_safety_wechat_bind"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:text="@string/tv_user_safety_wechat"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_user_safety_wechat_bind_status"
                android:text="@string/is_binding"
                android:gravity="right"
                android:textSize="@dimen/text_size_text_2"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_safety_weibo_bind"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:text="@string/tv_user_safety_weibo"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_user_safety_weibo_bind_status"
                android:text="@string/is_binding"
                android:gravity="right"
                android:textSize="@dimen/text_size_text_2"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
