<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_dialog_select_collect_folder"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="327dp">

    <LinearLayout
        android:id="@+id/ll_dialog_add_collect_folder"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_common_close"
            android:layout_marginLeft="15dp"
            android:src="@drawable/common_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="添加收藏夹"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color_40"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_dialog_collect_folder_confirm"
            android:src="@drawable/iv_dialog_collect_folder_confirm_white"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_add_collect_folder"
        android:layout_below="@+id/ll_dialog_add_collect_folder"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="25.5dp"
        android:layout_marginRight="25.5dp"
        android:hint="收藏夹名称"
        android:textSize="18sp"
        android:textColor="@color/text_color_66"
        android:textColorHint="@color/wireframe_shallow"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/bg_edit_cursor"
        android:background="@null"
        android:drawableBottom="@drawable/bottom_dialog_add_collecr_folder"
        android:drawablePadding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>