<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_item_select_card_bag"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginBottom="18dp"
    android:layout_marginLeft="7.5dp"
    android:layout_marginRight="7.5dp">

    <ImageView
        android:id="@+id/can_show_cancel"
        android:visibility="gone"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/top_delete"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <CheckBox
        android:id="@+id/cb_item_select_card_bag"
        style="@style/tv_single"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_checkbox_select_attention_top"
        android:button="@null"
        android:checked="true"
        android:clickable="false"
        android:gravity="center"
        android:text="生活常识"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_text_2"/>

</FrameLayout>