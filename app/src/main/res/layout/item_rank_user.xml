<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_card_bag"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_rank_user"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        tools:src="@drawable/logo"
        app:riv_oval="true"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_item_rank_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_rank_user_name"
            android:layout_marginBottom="6dp"
            tools:text="打印纸的规格"
            android:textStyle="bold"
            style="@style/tv_single"
            android:maxLength="8"
            android:textSize="@dimen/text_size_text_1"
            android:textColor="@color/text_color_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_rank_user_card"
            android:layout_below="@id/tv_item_rank_user_name"
            android:drawableStart="@drawable/tv_item_rank_user_card"
            android:drawablePadding="5dp"
            tools:text="1000"
            style="@style/tv_single"
            android:textSize="@dimen/text_size_text_3"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_rank_user_fans"
            android:layout_below="@id/tv_item_rank_user_name"
            android:layout_toEndOf="@id/tv_item_rank_user_card"
            android:drawableStart="@drawable/tv_item_rank_user_fans"
            android:drawablePadding="5dp"
            android:layout_marginStart="20dp"
            tools:text="1000"
            style="@style/tv_single"
            android:textSize="@dimen/text_size_text_3"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_rank_user_read"
            android:layout_below="@id/tv_item_rank_user_name"
            android:layout_toEndOf="@id/tv_item_rank_user_fans"
            android:drawableStart="@drawable/tv_item_rank_user_read"
            android:drawablePadding="5dp"
            android:layout_marginStart="20dp"
            tools:text="1000"
            style="@style/tv_single"
            android:textSize="@dimen/text_size_text_3"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/fl_item_rank_user_rank"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_item_rank_user_rank"
                android:src="@drawable/rank_4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_item_rank_user_rank"
                tools:text="4"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_size_text_2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_rank_user_no_rank"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="暂未上榜"
            android:textStyle="bold"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_size_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_toEndOf="@id/iv_item_rank_user"
        android:layout_below="@id/iv_item_rank_user"
        style="@style/line"/>

</RelativeLayout>