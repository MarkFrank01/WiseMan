<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:padding="0.5dp"
    android:background="@drawable/bg_item_home_card"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_home_card_icon"
        tools:src="@drawable/iv_item_home_card_icon"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_item_home_card_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        tools:text="笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/text_color_40"
        android:textSize="28sp"
        style="@style/tv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_home_card_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:text="2017.11.12   文／佐罗之梦"
        android:textColor="@color/text_color_2"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>