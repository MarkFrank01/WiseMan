<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="0.5dp"
    android:background="@drawable/bg_item_home_card"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_home_card"
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_home_card_icon"
            tools:src="@drawable/iv_item_home_card_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="6dp"
            app:riv_corner_radius_top_right="6dp"/>

        <TextView
            android:id="@+id/tv_item_home_card_num"
            android:paddingLeft="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            tools:text="@string/tv_item_home_card_num"
            android:textColor="@color/text_color_ff"
            android:textSize="11sp"
            android:background="@drawable/bg_tv_card_collect_num"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="26dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_home_card_title"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        tools:text="笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本笔记本"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/text_color_40"
        android:textSize="@dimen/sp_tv_card_title"
        style="@style/tv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_item_home_card_type"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_home_card_type"
            android:background="@drawable/bg_item_home_card_type"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="0.5dp"
            android:paddingBottom="0.5dp"
            android:gravity="center"
            tools:text="数码产品"
            android:textColor="@color/colorAccent"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>