<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0.5dp"
    android:background="@drawable/bg_item_home_card"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_home_card_icon"
        tools:src="@drawable/iv_item_home_card_icon"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="6dp"
        app:riv_corner_radius_top_right="6dp"/>

    <TextView
        android:id="@+id/tv_item_home_card_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        tools:text="笔记本"
        android:textColor="@color/text_color_40"
        android:textSize="16sp"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_home_card_num"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        tools:text="@string/tv_item_home_card_num"
        android:textColor="@color/text_color_99"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_item_home_card_type"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_home_card_type"
            android:background="@drawable/bg_item_home_card_type"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center"
            tools:text="数码产品"
            android:textColor="@color/colorAccent"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>