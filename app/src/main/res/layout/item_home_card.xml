<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_card_icon"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    
    <TextView
        android:id="@+id/tv_item_card_title"
        android:layout_toRightOf="@id/iv_item_card_icon"
        android:layout_marginTop="10dp"
        tools:text="笔记本"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_card_collect_num"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        tools:text="笔记本"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_card_type"
        android:layout_toRightOf="@id/iv_item_card_icon"
        android:layout_below="@+id/tv_item_card_title"
        android:layout_marginTop="5dp"
        tools:text="数码产品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_card_from"
        android:layout_toRightOf="@id/iv_item_card_icon"
        android:layout_below="@+id/tv_item_card_type"
        android:layout_marginTop="5dp"
        tools:text="本卡片由XXX用户提供"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>