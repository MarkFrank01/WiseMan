<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<com.zxcx.zhizhe.widget.ClipImageView
			android:id="@+id/cvl_head_image_crop"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			app:civMaskColor="@color/opacity_45_new"/>


		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/black">

			<TextView
				android:id="@+id/tv_cancel"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:gravity="center"
				android:text="取消"
				android:textColor="@color/white_final"
				android:textSize="@dimen/text_size_text_1"/>

			<TextView
				android:id="@+id/tv_complete"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="right"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:gravity="center"
				android:text="完成"
				android:textColor="@color/white_final"
				android:textSize="@dimen/text_size_text_1"/>

		</FrameLayout>

	</LinearLayout>


	<ImageView
		android:id="@+id/iv_clip_image_rotation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginBottom="250px"
		app:srcCompat="@drawable/iv_clip_image_rotation" />


</FrameLayout>