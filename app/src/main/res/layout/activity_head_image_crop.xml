<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zxcx.zhizhe.widget.ClipViewLayout
        android:id="@+id/cvl_head_image_crop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:clipBorderWidth="2dp"
        app:clipType="rectangle"
        app:mHorizontalPadding="30dp"/>
    
    <FrameLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white_final"
            android:textSize="@dimen/text_size_text_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_complete"
            android:layout_gravity="right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white_final"
            android:textSize="@dimen/text_size_text_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </FrameLayout>

</LinearLayout>