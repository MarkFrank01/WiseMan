<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.zxcx.zhizhe.ui.home.HomeFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:background="@color/background"
        style="@style/Widget.Design.AppBarLayout.NoElevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:minHeight="40dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:text="智者"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_home_search"
                android:background="@drawable/bg_home_search"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/ll_home_rank"
                android:layout_marginTop="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_home_creation"
                    android:padding="10dp"
                    android:drawableStart="@drawable/tv_home_creation"
                    android:drawablePadding="10dp"
                    android:text="创作"
                    android:textColor="@color/text_color_2"
                    android:textSize="@dimen/text_size_text_2"
                    android:layout_marginEnd="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_home_rank"
                    android:padding="10dp"
                    android:drawableStart="@drawable/tv_home_rank"
                    android:drawablePadding="10dp"
                    android:text="榜单"
                    android:textColor="@color/text_color_2"
                    android:textSize="@dimen/text_size_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_type"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:text="推荐"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_text_3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"/>

            <LinearLayout
                android:id="@+id/ll_home_tab"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tl_home"
                    app:tabIndicatorColor="@color/translate"
                    app:tabSelectedTextColor="@color/translate"
                    app:tabBackground="@color/translate"
                    app:tabMode="fixed"
                    android:layout_width="248dp"
                    android:layout_height="40dp">
                </android.support.design.widget.TabLayout>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/iv_home_search"
        android:layout_gravity="end"
        android:scaleType="center"
        android:src="@drawable/iv_home_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_behavior="com.zxcx.zhizhe.ui.home.HomeSearchBehavior"/>

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</android.support.design.widget.CoordinatorLayout>
