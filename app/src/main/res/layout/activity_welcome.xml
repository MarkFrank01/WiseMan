<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.zxcx.shitang.ui.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/iv_welcome_ad"
        android:layout_above="@+id/iv_welcome_icon"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_welcome_skip"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="跳过广告"
        android:textSize="14sp"
        android:textColor="@color/text_color_ff"
        android:gravity="center"
        android:background="@drawable/bg_welcome_skip"
        android:layout_width="72dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/iv_welcome_icon"
        android:src="@drawable/iv_welcome_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="15%"/>

</android.support.percent.PercentRelativeLayout>
