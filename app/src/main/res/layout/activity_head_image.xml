<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:orientation="vertical">
	
	<ImageView
		android:id="@+id/iv_common_close"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="16dp"
		android:layout_alignParentEnd="true"
		android:paddingTop="10dp"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:src="@drawable/login_close"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/tv_common_title"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:layout_marginStart="20dp"
		android:layout_below="@id/iv_common_close"
		android:text="修改头像"
		android:textColor="@color/text_color_1"
		android:textSize="@dimen/text_size_title_1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<com.zxcx.zhizhe.widget.CircleImageView
		android:id="@+id/iv_head_image"
		android:layout_width="match_parent"
		android:layout_height="344dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_centerInParent="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:riv_oval="true"
		tools:src="@drawable/logo"/>
	
	<TextView
		android:id="@+id/tv_head_save"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="保存"
		android:textColor="@color/button_blue"
		android:textSize="@dimen/text_size_title_1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/iv_head_image"/>

</android.support.constraint.ConstraintLayout>