<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_my_background"
    android:orientation="vertical"
    tools:context="com.zxcx.zhizhe.ui.my.MyFragment">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar"/>

    <View
        style="@style/line"
        android:layout_marginTop="@dimen/fragment_interval"/>

    <LinearLayout
        android:id="@+id/ll_common_setting_user_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="账户资料"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_1"/>

        <include layout="@layout/iv_right_into"/>

    </LinearLayout>

    <View
        style="@style/line"/>

    <View
        style="@style/line"
        android:layout_marginTop="@dimen/fragment_interval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_common_setting_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="消息提示"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_font"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="字体大小"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="图片加载"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/tv_common_setting_clean_cache"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <TextView
                android:id="@+id/tv_common_setting_clean_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="22.5dp"
                android:textColor="@color/text_color_66"
                android:textSize="14sp"
                tools:text="100M"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_night_model"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_common_setting_night_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/tv_common_setting_night_model"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <CheckBox
                android:id="@+id/cb_common_setting_night_model"
                android:layout_width="42dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:button="@drawable/selector_check_box"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line"/>

    <View
        style="@style/line"
        android:layout_marginTop="@dimen/fragment_interval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_common_setting_versions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="版本信息"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="意见反馈"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ll_common_setting_evaluate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="鼓励智者"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_text_1"/>

            <include layout="@layout/iv_right_into"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="20dp"/>

</LinearLayout>
