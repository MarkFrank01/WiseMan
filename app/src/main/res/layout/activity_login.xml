<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.zxcx.zhizhe.ui.loginAndRegister.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_close"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:scaleType="center"
        android:src="@drawable/login_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_marginTopPercent="5.3%"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/iv_login_close"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        app:layout_widthPercent="13.9%"
        app:layout_heightPercent="7.8%"
        app:layout_marginTopPercent="3%"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_login"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="68.8%"
        app:layout_marginTopPercent="5.2%"
        app:tabPadding="0dp"
        app:tabBackground="@color/translate"
        app:tabIndicatorColor="@color/translate"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/translate">
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/fl_login_content"
        android:layout_below="@id/tl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginTopPercent="2.5%">

    </FrameLayout>

</android.support.percent.PercentRelativeLayout>
