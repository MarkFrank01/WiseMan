<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="145dp"
    android:layout_height="75dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_home_card_bag_icon"
        android:src="@drawable/iv_item_home_card_bag_icon"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_width="145dp"
        android:layout_height="75dp"
        app:riv_corner_radius="6dp"/>
    <TextView
        android:id="@+id/tv_item_home_card_bag_title"
        android:text="生活常识"
        android:gravity="center"
        android:textColor="@color/text_item_card_bag"
        android:textSize="14sp"
        android:background="@drawable/bg_item_hot_card_bag_title"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>