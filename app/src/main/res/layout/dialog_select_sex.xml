<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_dialog"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/tv_dialog_select_sex_title"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:layout_marginBottom="6dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:text="选择你的性别"
		android:textColor="@color/text_color_2"
		android:textSize="@dimen/text_size_text_1"/>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_dialog_select_sex_title">
		
		<TextView
			android:id="@+id/tv_dialog_select_sex_man"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:gravity="center"
			android:text="男"
			android:textColor="@color/text_color_1"
			android:textSize="17sp"/>
		
		<TextView
			android:id="@+id/tv_dialog_select_sex_woman"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:gravity="center"
			android:text="女"
			android:textColor="@color/button_blue"
			android:textSize="17sp"/>
	
	</LinearLayout>

</RelativeLayout>