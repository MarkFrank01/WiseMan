<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_select_sex_title"
        android:text="选择你的性别"
        android:textStyle="bold"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/text_size_text_1"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_below="@+id/tv_dialog_select_sex_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_select_sex_man"
            android:text="男"
            android:gravity="center"
            android:textColor="@color/text_color_1"
            android:textSize="17sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_dialog_select_sex_woman"
            android:text="女"
            android:gravity="center"
            android:textColor="@color/button_blue"
            android:textSize="17sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    
</RelativeLayout>