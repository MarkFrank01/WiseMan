<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/fragment_my_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_message_mode_system"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_mode_system"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="系统消息推送"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_1"/>

        <CheckBox
            android:id="@+id/cb_message_mode_system"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:button="@drawable/selector_check_box"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message_mode_dynamic"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_mode_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="动态消息推送"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_text_1"/>

        <CheckBox
            android:id="@+id/cb_message_mode_dynamic"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:button="@drawable/selector_check_box"/>

    </LinearLayout>

</LinearLayout>