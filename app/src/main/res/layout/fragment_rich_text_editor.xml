<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rte"
    android:layout_above="@id/view_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zxcx.zhizhe.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/view_line"
        android:layout_above="@+id/ll_rte_bottom"
        style="@style/line"/>

    <LinearLayout
        android:id="@+id/ll_rte_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rte_keyboard"
            android:scaleType="center"
            android:src="@drawable/iv_rte_keyboard"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_rte_album"
            android:scaleType="center"
            android:src="@drawable/iv_rte_album"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_rte_camera"
            android:scaleType="center"
            android:src="@drawable/iv_rte_camera"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>

