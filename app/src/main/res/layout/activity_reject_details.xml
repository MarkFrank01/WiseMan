<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_reject_details_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_reject_details_edit"
            android:layout_marginStart="30dp"
            android:src="@drawable/iv_note_details_edit"
            android:gravity="center"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_reject_details_delete"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/iv_reject_details_delete"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_reject_details"
        android:layout_above="@id/ll_reject_details_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:foreground="@drawable/fg_item_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zxcx.zhizhe.widget.CardImageView
                    android:id="@+id/iv_reject_details"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_card"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:transitionName="cardImage"
                    app:widthWeight="16"
                    app:heightWeight="9"
                    app:hasShade="true"/>

                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_reject_details_title"
                        tools:text="动圈和铁圈耳机的区别"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/white_final"
                        android:textSize="@dimen/text_size_title_2"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="cardTitle"/>

                    <LinearLayout
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:layout_below="@id/tv_reject_details_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/fl_reject_details_card_bag"
                            android:paddingTop="8dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_reject_details_card_bag"
                                tools:text="数码产品"
                                style="@style/tv_card_bag"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_reject_details_info"
                            tools:text="@string/tv_card_info"
                            android:textColor="@color/text_color_ee"
                            android:textSize="@dimen/text_size_text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:transitionName="cardInfo"/>
                    </LinearLayout>

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:background="@drawable/bg_reject_reason"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="未通过原因"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_reject_reason"
                    android:layout_marginTop="12dp"
                    tools:text="标题、内容不符合平台定位，内容不够详实、偏离主题。"
                    android:textSize="@dimen/text_size_text_2"
                    android:textColor="@color/text_color_1"
                    android:lineSpacingExtra="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_reject_agreement"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    tools:text="标题、内容不符合平台定位"
                    android:textSize="@dimen/text_size_text_3"
                    android:textColor="@color/text_color_1"
                    android:lineSpacingExtra="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_reject_details"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_alignParentEnd="true"
        android:src="@drawable/iv_common_close"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>