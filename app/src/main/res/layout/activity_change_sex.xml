<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_common_close"
        android:layout_alignParentEnd="true"
        android:src="@drawable/login_close"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="性别"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_change_sex_man"
            android:gravity="center"
            android:button="@null"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="男"
            android:textSize="@dimen/text_size_title_2"
            android:textColor="@color/color_dialog_change_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/text_color_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RadioButton
            android:id="@+id/rb_change_sex_woman"
            android:gravity="center"
            android:button="@null"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="女"
            android:textSize="@dimen/text_size_title_2"
            android:textColor="@color/color_dialog_change_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_change_sex_save"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:text="保存"
        android:textColor="@color/button_blue"
        android:textSize="@dimen/text_size_title_1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>