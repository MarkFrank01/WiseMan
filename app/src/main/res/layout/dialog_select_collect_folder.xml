<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="327dp"
    app:layout_maxHeight="327dp">

    <LinearLayout
        android:id="@+id/ll_dialog_collect_folder"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_dialog_collect_folder_close"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/common_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="选择收藏夹"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color_40"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_dialog_collect_folder_add"
            android:src="@drawable/iv_dialog_collect_folder_add"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dialog_select_collect_folder"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/ll_dialog_collect_folder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>