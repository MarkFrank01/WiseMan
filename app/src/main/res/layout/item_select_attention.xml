<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_select_attention_icon"
            android:src="@drawable/iv_item_home_card_bag_icon"
            android:layout_centerInParent="true"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:riv_corner_radius="6dp"/>

        <TextView
            android:id="@+id/tv_item_select_attention_title"
            android:text="生活常识"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/bg_item_attention_title"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <LinearLayout
            android:id="@+id/ll_item_select_attention_select"
            android:background="@drawable/bg_item_attention_select"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_select_attention_select"
                android:src="@drawable/cb_item_collect_folder"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

            <TextView
                android:id="@+id/tv_item_select_attention_select"
                android:text="生活常识"
                android:textSize="14sp"
                android:textColor="#B2FFFFFF"
                android:layout_marginTop="4.5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>