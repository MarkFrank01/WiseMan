<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="110dp"
    android:layout_height="110dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_select_attention_icon"
        tools:src="@drawable/iv_item_home_card_bag_icon"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:riv_corner_radius="6dp"/>

    <RelativeLayout
        android:id="@+id/ll_item_select_attention_select"
        android:background="@drawable/bg_item_attention_select"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_item_select_attention_select"
            tools:src="@drawable/cb_item_collect_folder_checked"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_select_attention_name"
            tools:text="生活常识"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white_final"
            android:layout_marginTop="4.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>